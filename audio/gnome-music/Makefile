		libmediaart-2.0.so:multimedia/libmediaart \
		libgoa-1.0.so:net/gnome-online-accounts \
		libdazzle-1.0.so:x11-toolkits/libdazzle
RUN_DEPENDS=	grilo-plugins>=0.3.2:net/grilo-plugins
